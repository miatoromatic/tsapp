                        if (roll1 === 100) critCount++;
                        if (roll2 === 100) critCount++;

                        var failCount = 0;
                        if (roll1 === 1) failCount++;
                        if (roll2 === 1) failCount++;

                        if (critCount === 2) {
                            total = total * 7;
                            crits = " **(Starbreaker!)**";
                        } else if (critCount === 1 && failCount === 1) {
                            total = total * 2;
                            crits = " **(Quantum Crit!)**";
                        } else if (critCount === 1) {
                            total = total * 2;
                            crits = " **(Crit!)**";
                        } else if (failCount === 1) {
                            total = total / 2;
                            crits = " **(Critical Failure...)**";
                        } else if (failCount === 2) {
