                        let aoeMessage = "";
                        if (aoePresent) {
                            aoeMessage = total + " / 3" + " (" + stablecount + " explosions)" + "\n**+" + dividedTotal + " HP to 3 targets**";
                            typeMessage = "AoE ";
                        }

                        let totalMessage = `${total}${crits}`;
                        if (aoePresent) {
                            totalMessage = "";
                        } else {
